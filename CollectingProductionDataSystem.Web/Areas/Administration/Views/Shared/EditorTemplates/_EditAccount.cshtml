@model CollectingProductionDataSystem.Web.ViewModels.Identity.EditUserViewModel

@Html.ValidationSummary(false)
@Html.HiddenFor(m => m.Id)
@Html.HiddenFor(m => m.UserName)
<div class="container container-modal">
    <div class="col-lg-10 col-lg-offset-1">
        <div class="form-group">
            <div class="row">
                @Html.LabelFor(m => m.Email, new { @class = "col-xs-3 control-label control-label-horizontal" })
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control col-xs-9 k-editor" } })
                @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "validation-summary-errors" })
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-xs-3 control-label control-label-horizontal" })
                @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control col-xs-9 k-editor" } })
                @Html.ValidationMessageFor(m => m.NewPassword, string.Empty, new { @class = "validation-summary-errors" })
            </div>
        </div>
    </div>
</div>

