@using Resources = App_GlobalResources.Resources
@model System.Int32
@(Html.Kendo()
      .DropDownListFor(m => m)
      .OptionLabel(Resources.Layout.ChooseProcessUnit)
      .DataTextField("FullName")
      .DataValueField("Id")
      .Height(520)
          .DataSource(source =>
          {
              source.Custom()
                  .ServerFiltering(true)
                  .ServerPaging(true)
                  .PageSize(80)
                  .Type("aspnetmvc-ajax") //Set this type if you want to use DataSourceRequest and ToDataSourceResult instances
                  .Transport(transport =>
                  {
                      transport.Read(read =>
                        {
                            read.Action("Read", "ProcessUnit", new { area = "NomManagement" }).Data("sendAntiForgery");
                        });
                  });
          })
)

