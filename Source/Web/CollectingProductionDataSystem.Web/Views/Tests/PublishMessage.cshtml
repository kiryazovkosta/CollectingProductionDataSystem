@model CollectingProductionDataSystem.Models.UtilityEntities.Message
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-sm-8 col-lg-offset-2">
        <div class="form-group">
            @Html.LabelFor(m => m.MessageText, new { @class = "col-sm-2 control-label", @for = "MessageText" })
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.MessageText, 5, 40, new { @class = "form-control", style = "max-width: 500px; width: 350px; overflow-y: scroll; text-align: justify;" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ValidUntill, new { @class = "col-sm-2 control-label", @for = "ValidUntill" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.ValidUntill, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MessageType, new { @class = "col-sm-2 control-label", @for = "MessageType" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.MessageType, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>
    
    <button type="submit" class="btn btn-default">Submit</button>
}

@section scripts{
    @Scripts.Render("~/bundles/custom/kendoadditional")
    @Scripts.Render("~/bundles/custom/unitGrids")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
}
