@{
    ViewBag.Title = "Home Page";
}

@{if (ViewBag.StatusMessage != null)
{
    if (ViewBag.MessageType == "Success")
    {
        <div class="alert alert-success">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <p class="text-success">@ViewBag.StatusMessage</p>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <p class="text-danger">@ViewBag.StatusMessage</p>
        </div>
    }
}
}

<div id="home-header" class="carousel slide" data-ride="carousel" data-interval="7000">
    <ol class="carousel-indicators">
        <li data-target="#home-header" data-slide-to="0" class="active"></li>
        <li data-target="#home-header" data-slide-to="1"></li>
        <li data-target="#home-header" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            <img alt="First slide" src="~/Content/Images/factory.png" style="height:500px; width:100%" />
            <div class="carousel-caption">
                <h3>Данни за измервателните позиции</h3>
                <p>Позволява получаването на данни от измервателни прибори за изготвяне на сменни дневни и месечни отчети.</p>
            </div>
        </div>
        <div class="item">
            <img alt="Second slide" src="~/Content/Images/tanks.png" style="height:500px;width:100%" />
            <div class="carousel-caption">
                <h3>Данни от нивомерни системи</h3>
                <p>Позволява получаването на данни от нивомерните системи за изготвяне на сменни дневни и месечни отчети</p>
            </div>
        </div>
        <div class="item">
            <img alt="Third slide" src="~/Content/Images/center.png" style="height:500px;width:100% " />
            <div class="carousel-caption">
                <h3>Сводни отчети</h3>
                <p>Позволява обобщаване на събраните данни служещи за изготвянето на материален баланс.</p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#home-header" data-slide="prev">
    </a>
    <a class="right carousel-control" href="#home-header" data-slide="next">
    </a>
</div>

<div class="container body-content">
    <div class="row">
        <div class="col-md-4">
            <h2>Getting started</h2>
            <p>
                ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
                enables a clean separation of concerns and gives you full control over markup
                for enjoyable, agile development.
            </p>
            <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Get more libraries</h2>
            <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
            <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Web Hosting</h2>
            <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
            <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
        </div>
    </div>
</div> 

@section styles{
    <style>
        #home-header {
            width:100%; 
            margin-left:0; 
            margin-right:0;
            margin-top:-10px;
        }
        .container-fluid {
            padding-left:0;
            padding-right:0;
        }
    </style>
    }


