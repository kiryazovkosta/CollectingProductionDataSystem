@using Resources=App_GlobalResources.Resources;
@{
    ViewBag.Title = "Home Page";
}

@{if (ViewBag.StatusMessage != null)
{
    if (ViewBag.MessageType == "Success")
    {
        <div class="alert alert-success">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <p class="text-success">@ViewBag.StatusMessage</p>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <p class="text-danger">@ViewBag.StatusMessage</p>
        </div>
    }
}
}

<div id="home-header" class="carousel slide" data-ride="carousel" data-interval="7000">
    <ol class="carousel-indicators">
        <li data-target="#home-header" data-slide-to="0" class="active"></li>
        <li data-target="#home-header" data-slide-to="1"></li>
        <li data-target="#home-header" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            <img alt="First slide" src="~/Content/Images/factory.png" />
            <div class="carousel-caption">
                <h3>Данни за измервателните позиции</h3>
                <p>Позволява получаването на данни от измервателни прибори за изготвяне на сменни, дневни и месечни отчети.</p>
            </div>
        </div>
        <div class="item">
            <img alt="Second slide" src="~/Content/Images/tanks.png" />
            <div class="carousel-caption">
                <h3>Данни от нивомерни системи</h3>
                <p>Позволява получаването на данни от нивомерните системи за изготвяне на сменни, дневни и месечни отчети</p>
            </div>
        </div>
        <div class="item">
            <img alt="Third slide" src="~/Content/Images/center.png" />
            <div class="carousel-caption">
                <h3>Сводни отчети</h3>
                <p>Позволява обобщаване на събраните данни служещи за изготвянето на материален баланс.</p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#home-header" data-slide="prev">
    </a>
    <a class="right carousel-control" href="#home-header" data-slide="next">
    </a>
</div>

<div class="container body-content">
    <div class="row">
        <div class="col-md-4">
            <h2>Измервателни позиции</h2>
            <p>
                Позволява получаването на данни от измервателни прибори за изготвяне на сменни, дневни и месечни отчети.
            </p>
            <p><a class="btn btn-default" href="#">@Resources.Layout.LearnMore &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Нивомерни системи</h2>
            <p>Позволява получаването на данни от нивомерните системи за изготвяне на сменни, дневни и месечни отчети.</p>
            <p><a class="btn btn-default" href="#">@Resources.Layout.LearnMore &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Сводни отчети</h2>
            <p>Позволява обобщаване на събраните данни служещи за изготвянето на материален баланс.</p>
            <p><a class="btn btn-default" href="#">@Resources.Layout.LearnMore &raquo;</a></p>
        </div>
    </div>
</div> 

@section styles{
    <style>
        #home-header {
            width:100%; 
            margin-left:0; 
            margin-right:0;
            margin-top:-10px;
        }
        .body-content {
            padding-left:0 !important;
            padding-right:0 !important;
        }
    </style>
}

