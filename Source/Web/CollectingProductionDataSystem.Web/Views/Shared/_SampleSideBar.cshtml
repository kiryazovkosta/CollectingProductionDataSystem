<div class="sidebar-wrapper form-inline">
    <div class="form-group">
        <label for="factories">Производство</label>
            @(Html.Kendo().DropDownList()
            .Name("factories")
            .OptionLabel("Изберете производство...")
            .HtmlAttributes(new { style = "width:95%" })
            .DataTextField("Name")
            .DataValueField("Id")
            .DataSource(source =>
            {
                source.Read(read =>
                {
                    read.Action("GetFactories", "Ajax");
                });
            })
            )
    </div>
    <div class="form-group">
        <label for="processunits">Инсталация</label>
            @(Html.Kendo().DropDownList()
            .Name("processunits")
            .OptionLabel("Изберете инсталация...")
                    .HtmlAttributes(new { style = "width:95%" })
            .DataTextField("Name")
            .DataValueField("Id")
            .DataSource(source =>
            {
                source.Read(read =>
                {
                    read.Action("GetProcessUnits", "Ajax").Data("sendFactory");
                })
                .ServerFiltering(true);
            })
            .Enable(false)
            .AutoBind(false)
            .CascadeFrom("factories")
            )

    </div>
    <script>
        function sendFactory() {
            return {
                factoryId: $("#factories").val()
            };
        }
    </script>
    <div class="form-group">
        <label for="shifts">Смяна</label>
        @(Html.Kendo().DropDownList()
            .Name("shifts")
            .OptionLabel("Изберете смяна...")
                    .HtmlAttributes(new { style = "width:95%" })
            .DataTextField("Name")
            .DataValueField("Minutes")
            .DataSource(source =>
            {
                source.Read(read =>
                {
                    read.Action("GetShifts", "Tanks");
                });
            })
        )
    </div>
    <div class="form-group">
        <label for="date">Дата</label>
        @Html.Kendo().DatePicker().Name("date").Culture("bg-BG").HtmlAttributes(new { style = "width:95%" })
    </div>
    <hr/>
    <div class="form-group">
        <button id="apply" type="button" class="btn btn-primary">Apply</button>
    </div>
</div>
