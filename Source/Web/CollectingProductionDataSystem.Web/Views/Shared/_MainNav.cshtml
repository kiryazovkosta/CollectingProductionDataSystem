@using Resources = App_GlobalResources.Resources;
<div class="navbar navbar-default navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/Home/Index" class="navbar-brand"><img src="~/Content/Images/LukTransparent.png" alt="ЛУКОЙЛ" height="40px" /></a>

        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (Html.ActionIsAccessibleToUser("UnitsData", "Units", "ShiftReporting"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Resources.Layout.ShiftsData<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.AuthorizedActionLink(@Resources.Layout.UnitsData, "UnitsData", "Units", new { area = "ShiftReporting" }, null)</li>
                            <li>@Html.AuthorizedActionLink(@Resources.Layout.TanksData, "TanksData", "Tanks", new { area = "ShiftReporting" }, null)</li>
                        </ul>
                    </li>
                }
                
                @if (Html.ActionIsAccessibleToUser("UnitsDailyData", "UnitsDaily", "DailyReporting"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Resources.Layout.DailyData<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.AuthorizedActionLink(@Resources.Layout.UnitsDailyData, "UnitsDailyData", "UnitsDaily", new { area = "DailyReporting" }, null)</li>
                            <li>@Html.AuthorizedActionLink(@Resources.Layout.MeasuringPointsData, "TransactionsDailyData", "TransactionsDaily", new { area = "DailyReporting" }, null)</li>
                        </ul>
                    </li>
                }
                
                @if (Html.ActionIsAccessibleToUser("Index", "User", "Administration"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Resources.Layout.Administration<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.AuthorizedActionLink(@Resources.Layout.UsersAdministration, "Index", "User", new { area = "Administration" }, null)</li>
                            <li>@Html.AuthorizedActionLink(@Resources.Layout.RolesAdministration, "Index", "Role", new { area = "Administration" }, null)</li>
                        </ul>
                    </li>
                }
                <li>@Html.AuthorizedActionLink(@Resources.Layout.Nomenclatures,"Index","Nomenclatures",new { area = "NomManagement" }, null)</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
