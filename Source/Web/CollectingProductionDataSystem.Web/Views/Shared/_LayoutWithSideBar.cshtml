<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
    @Styles.Render("~/Content/css")

</head>
<body>
    @Html.Partial("_MainNav")
    @* --- Side bar --- *@
    <div class="row">
        <div class="col-lg-2">
            <div class="panel panel-default panel-collapse">
                <div class="panel-heading">Parameters <a id="naw-collapse" class="pull-right text-muted" data-toggle="collapse" href="#nav-body" aria-expanded="true" aria-controls="nav-body"><span class="glyphicon glyphicon-chevron-up"></span></a></div>
                <div id="nav-body" class="panel-body collapse in">
                    <div class="container form-inline" role="form">
                        @RenderSection("sidebar", false)
                    </div>
                </div>
            </div>
            @* --- End of Side Bar --- *@
        </div>
        <div class="col-lg-10">
            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Бизнес Мениджмънт Системс ЕООД</p>
                </footer>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
