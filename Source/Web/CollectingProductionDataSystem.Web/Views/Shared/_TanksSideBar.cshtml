@using Resources = App_GlobalResources.Resources;
@using CollectingProductionDataSystem.Web.Infrastructure.Helpers;
<div class="form-group">
    <label for="areas">@Resources.Layout.Area</label>
    @(Html.Kendo().DropDownList()
        .Name("areas")
        .OptionLabel(Resources.Layout.ChooseArea)
        .HtmlAttributes(new { style = "width:95%" })
        .DataTextField("Name")
        .DataValueField("Id")
        .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Action("GetAreas", "Ajax", new { area = "" });
            });
        })
    )

</div>
<div class="form-group">
    <label for="parks">@Resources.Layout.Parks</label>
    @(Html.Kendo().DropDownList()
        .Name("parks")
        .OptionLabel(Resources.Layout.ChooseParks)
        .HtmlAttributes(new { style = "width:95%" })
        .DataTextField("Name")
        .DataValueField("Id")
        .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Action("GetParks", "Ajax", new { area = "" }).Data("sendArea");
            })
            .ServerFiltering(true);
        })
        .Enable(false)
        .AutoBind(false)
        .CascadeFrom("areas")
    )
</div>
<div class="form-group">
    <label for="date">@Resources.Layout.Date</label>
    @Html.Kendo().DatePicker().Name("date").Culture("bg-BG").HtmlAttributes(new { style = "width:95%" })
</div>
<div class="form-group" id="shift-section">
    <label for="shifts">@Resources.Layout.ProductionShift</label>
    @(Html.Kendo().DropDownList()
        .Name("shifts")
        .OptionLabel(Resources.Layout.ChooseProductionShift)
        .HtmlAttributes(new { style = "width:95%" })
        .DataTextField("Name")
                .DataValueField("BeginTicks")
        .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Action("GetShifts", "Ajax", new { area = "" });
            });
        })
    )
</div>
<hr />
<div class="form-group">
    <button id="apply" type="button" class="btn btn-primary" style="width:95%">@Resources.Layout.Apply</button>
</div>
@using (Html.BeginScripts())
{
    <script src="~/Scripts/custom/sendArea.min.js"></script>
}